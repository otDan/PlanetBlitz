code = "shader_type canvas_item;

uniform float atmosphere_radius = 0.5;
uniform sampler2D SCREEN_TEXTURE: hint_screen_texture, filter_linear_mipmap;
uniform vec4 outer_color: source_color = vec4(0.2, 0.5, 0.8, 1.0);
uniform vec4 inner_color: source_color = vec4(0.5, 0.8, 1.0, 1.0);


void fragment() {
    vec2 center = vec2(0.5, 0.5);
    float distance = distance(center, UV);

    // Discard fragments outside of the circular shape
    if (distance > 0.5) {
        discard;
    }

    // Sample the color from the sprite texture
    vec4 sprite_color = texture(SCREEN_TEXTURE, UV);

    // Calculate the intensity of the atmosphere based on the distance
    float intensity = smoothstep(atmosphere_radius - 0.01, atmosphere_radius, distance);

    // Calculate the final color by interpolating between outer and inner color based on intensity
    vec4 final_color = mix(outer_color, inner_color, intensity);

    // Mix the final color with the sprite color
    final_color.rgb = mix(final_color.rgb, sprite_color.rgb, sprite_color.a);

    COLOR = final_color;
}"

